<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".GetStartedActivity">

    <View
        android:id="@+id/back_blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="32dp"
        android:background="@drawable/shape_bg_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:paddingStart="@dimen/push_git_logo_black"
        android:src="@mipmap/github"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ContentDescription,RtlSymmetry" />

    <ImageView
        android:id="@+id/dicoding_logo"
        android:layout_width="117dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:src="@mipmap/text_dicoding"
        app:layout_constraintEnd_toEndOf="@id/back_blue"
        app:layout_constraintStart_toStartOf="@id/back_blue"
        app:layout_constraintTop_toTopOf="@id/back_blue"
        tools:ignore="ContentDescription" />


    <TextView
        android:id="@+id/tv_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/become_an_expert_nfrom_the_expert"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:textAlignment="center"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="@id/back_blue"
        app:layout_constraintEnd_toEndOf="@id/back_blue"
        app:layout_constraintTop_toBottomOf="@id/dicoding_logo"/>

    <Button
        android:id="@+id/btn_get_started"
        android:layout_width="170dp"
        android:layout_height="64dp"
        android:background="@drawable/shape_btn_black"
        app:backgroundTint="@color/black"
        android:text="@string/get_started"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@id/tv_tagline"
        app:layout_constraintStart_toStartOf="@id/back_blue"
        app:layout_constraintEnd_toEndOf="@id/back_blue"/>


</androidx.constraintlayout.widget.ConstraintLayout>